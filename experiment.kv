<Config>:
# Nao ip configuration and subject id
    #nao_ip:nao_ip
    #subject_id:subject_id
    orientation:'vertical'
    BoxLayout:
        size_hint_y:0.1
        padding:'5dp'
        spacing:'5dp'
        Label:
            text:'SetUp screen'
            font_size:30

            color:0,0,0,1
    BoxLayout:
        size_hint_y:0.1

        Label:
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"Nao ip"
            font_size:20
            color:3,0,0,1


        TextInput:
            id:nao_ip
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"192.168.0.100"
            font_size:20
            color:0,0,0,1

    BoxLayout:
        size_hint_y:0.1

        Label:
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"Subject ID"
            font_size:20
            color:0,0,0,1

        TextInput:
            id:subject_id
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"0"
            font_size:20
            color:0,0,0,1
    BoxLayout:
        size_hint_y:0.3
        Button:
            text:"Let's GO"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: self.background_color = (1,0,0,1)
            on_release: app.btn_released(self, app.goto_experiment_screen,subject_id,nao_ip)  # function to be called when button is pressed


<Experiment_screen>:
    kinect_status_id: kinect_status_id
    state_text_input: state_text_input
    next_button: next_button
    timer:timer
    stop_button:stop_button
    orientation:'vertical'
    BoxLayout:
        size_hint_y:0.3
        Button:
            size_hint_x:0.2
            text:"Stop \n Experiment"
            color:0,0,0,1
            background_color:1,0,0,1
            font_size:15
            bold: True
            on_press: app.exit_experiment()

        Label:
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"Experiment Screen"
            bold: True
            font_size:30
            color:0,0,0,1

    BoxLayout:
        size_hint_y:0.3
        Label:
            text:"Experimental stage"
            font_size:20
            color:0,0,0,1
            bold: True

        TextInput:
            id: state_text_input
            text: "0"
            font_size:20
            color:0,0,0,1

        Button:
            id: stop_button
            text:"Stop"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: app.end_end_task()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:0.1
        Label:
            text: 'Status:'
            font_size:20
            color:0,0,0,1
            bold: True

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Kinect'
                font_size:20
                color:0,0,0,1
            Label
                id: kinect_status_id
                text: 'unknown'
                font_size:20
                color:0,0,0,1
                bold: True

    BoxLayout:
        size_hint_y:0.1
        Button:
            id: rest_button
            text:"rest"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: app.rest()
        Button:
            id: stand_up_button
            text:"stand up"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: app.stand_up()

    BoxLayout:
        size_hint_y:0.3
        Button:
            id: next_button
            text:"Next"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: app.next_epoch()
            #on_release: app.btn_released(self, app.goto_main)  # function to be called when button is pressed

    BoxLayout:
        size_hint_y:0.1

        Label:
            text:"Timer"
            color:0,0,0,1
            font_size:30
            bold: True


        Label:
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            id:timer
            text:"00:00"
            font_size:20
            color:0,0,0,1


